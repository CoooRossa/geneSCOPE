# Windows-specific Makefile configuration with compression fix
PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS) -DWINDOWS_BUILD -DZLIB_CONST -DNDEBUG
PKG_LIBS = $(SHLIB_OPENMP_CXXFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) -lz
CXX_STD = CXX17

# Windows-specific compression fix
PKG_CPPFLAGS = -DNDEBUG -DZLIB_CONST

# Windows-specific OpenMP linking
ifeq "$(WIN)" "64"
  PKG_LIBS += -lgomp
endif

# Disable problematic optimizations
PKG_CXXFLAGS += -O2 -fno-strict-aliasing
